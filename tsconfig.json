{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["DOM", "ESNext"],
    "target": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "noErrorTruncation": true,
    "paths": {
      "src/*": ["src/*"],
      "fp": ["src/utils/fp"],
    },
  },
  "include": [
    "**/*",
    ".deploy/action.ts",
    "./.eslintrc.js",
    "./.eslintrc.production.js",
  ],
  "exclude": ["node_modules"],
}
